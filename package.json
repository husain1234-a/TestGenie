{
  "name": "testgenie",
  "displayName": "TestGenie",
  "description": "Generate test cases from OpenAPI contracts",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Testing"
  ],
  
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "testGenie.StartChat",
        "title": "TestGenie: Open chat"
      },
      {
        "command": "testgenie.generateTest",
        "title": "TestGenie: Generate Test Cases from OpenAPI Contract"
      },
      {
        "command": "testgenie.explainCode",
        "title": "TestGenie: Explain this code"
      },
      {
        "command": "testgenie.generateUnitTests",
        "title": "TestGenie: Generate Unit Tests"
      }
    ],
  
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "testgenie.explainCode",
          "group": "TestGenie@1"
        }
      ],
      "commandPalette": [
        {
          "command": "testgenie.explainCode",
          "when": "editorHasSelection"
        },
        {
          "command": "testgenie.generateTest",
          "when": "editorLangId == json || editorLangId == yaml"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  }
}